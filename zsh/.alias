alias rl="source ~/.zshrc"
alias aptuu="apt update && apt upgrade -y"

alias vi="nvim"
alias vim="nvim"

alias pi="ssh pi@pi.hole"
alias ll="ls -lah"
alias home="cd ~"
alias h="cd ~"
alias ..="cd .."
alias projects="cd ~/projects"
alias prj="cd ~/projects"
alias win="cd /mnt/c/Users/tmgas/"

alias au="apt update -y && apt upgrade -y"

alias gaa="git add --all"
alias ga="git add ."
alias gc="git commit -m"
alias gp="git push"
alias gr="git reset --hard HEAD"
alias gf="git fetch origin 'refs/heads/*:refs/heads/*'"

alias cz="vi $HOME/.config/zsh/* $HOME/.config/zsh/.* --cmd 'cd %:h'"
alias cv="vi $HOME/.config/nvim/init.lua --cmd 'cd %:h'"

alias py="python3"

alias tmux="TERM=xterm-256color tmux"

alias dcp="echo 'pausing containers' && docker container list -q | xargs docker container pause &>/dev/null"
alias dcu="echo 'unpausing containers' && docker container list -q | xargs docker container unpause &>/dev/null"

alias node14='export PATH="/usr/local/opt/node@14/bin:$PATH"'
alias node16='export PATH="/usr/local/opt/node@16/bin:$PATH"'
alias node18='export PATH="/usr/local/opt/node@18/bin:$PATH"'
